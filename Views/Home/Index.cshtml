@{
    ViewData["Title"] = "Home";
}

<h2>Welcome</h2>
@if ((bool)ViewData["IsAuthenticated"] == false)
{
    <p><a href="/Account/Login">Login</a></p>
}
else
{
    @if (ViewData["Role"]?.ToString() == "Admin")
    {
        <p><a href="/Admin/Index">Admin Dashboard</a></p>
    }
    else
    {
        <p><a href="/Employee/Devices">My Devices</a></p>
    }
    <p><a href="/Account/Logout">Logout</a></p>
}