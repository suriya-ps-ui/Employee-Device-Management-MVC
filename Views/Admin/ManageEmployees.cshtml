@model List<Models.Employee>
@{
    ViewData["Title"] = "Manage Employees";
}

<h2>Manage Employees</h2>
<p><a href="/Admin/CreateEmployee">Add Employee</a></p>
<table>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Department</th>
        <th>Actions</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.empId</td>
            <td>@employee.empName</td>
            <td>@employee.department</td>
            <td>
                <a href="/Admin/EditEmployee?empId=@employee.empId">Edit</a> |
                <a href="/Admin/DeleteEmployee?empId=@employee.empId">Delete</a> |
                <a href="/Admin/ManageDevices?empId=@employee.empId">Devices</a>
            </td>
        </tr>
    }
</table>
<p><a href="/Admin/Index">Back</a></p>