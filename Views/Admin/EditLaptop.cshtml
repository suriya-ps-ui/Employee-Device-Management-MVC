@model Models.Laptop
@{
    ViewData["Title"] = "Edit Laptop";
    var empId = ViewBag.EmpId;
}

<h2>Edit Laptop</h2>
<form asp-action="EditDevice" method="post">
    <input type="hidden" name="empId" value="@empId" />
    <input type="hidden" name="deviceType" value="Laptop" />
    <input type="hidden" name="id" value="@Model.lapHostName" />

    <label>Model</label>
    <input name="lapModel" value="@Model.lapModel" /><br />
    <label>Processor</label>
    <input name="processor" value="@Model.processor" /><br />
    <label>Storage</label>
    <input name="storage" value="@Model.storage" /><br />
    <label>RAM</label>
    <input name="ram" value="@Model.ram" /><br />
    <label>Assigned On</label>
    <input name="assignedOn" type="date" value="@Model.assignedOn.ToString("yyyy-MM-dd")" /><br />
    <label>Status</label>
    <input name="status" value="@Model.status" /><br />

    <button type="submit">Update</button>
    <a href="/Admin/ManageDevices?empId=@empId">Back</a>
</form>